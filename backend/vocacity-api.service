[Unit]
Description=Vocacity Flask API Server
After=network.target

[Service]
Type=simple
User=ssn
WorkingDirectory=/home/ssn/Vs HQ/Automated-AI-caller-dash/backend
Environment="PATH=/home/ssn/Vs HQ/Automated-AI-caller-dash/backend/venv/bin"
ExecStart=/home/ssn/Vs HQ/Automated-AI-caller-dash/backend/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:5000 server:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

